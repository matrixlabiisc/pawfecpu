#!/ccs/home/dsambit/frontier/bin/rc
#SBATCH -A mat239
#SBATCH -J gputests
#SBATCH -t 1:00:00
#SBATCH -p batch
#SBATCH -N 1
#SBATCH --gpus-per-node 6
