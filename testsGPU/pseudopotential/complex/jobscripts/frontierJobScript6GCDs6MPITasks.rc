BASE = $WD/src/dftfeDebug/build/release/complex
n=`{echo $SLURM_JOB_NUM_NODES '*' 8 | bc}

srun -n 6 -c 7 --gpu-bind closest $BASE/dftfe parameterFileMg2x_1.prm > outputMg2x_1
